                <input type="email" class="cta-input" placeholder="Enter your email" required>
                <button type="submit" class="btn btn-primary" style="background: white; color: var(--primary);">
                    Get Started Free
                </button>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-content">
            <div class="footer-links">
                <a href="#">About</a>
                <a href="#">Curriculum</a>
                <a href="#">Success Stories</a>
                <a href="#">Enterprise</a>
                <a href="#">Blog</a>
                <a href="#">Support</a>
            </div>
            <p style="opacity: 0.7;">
                ¬© 2024 Liberation Learning. Empowering humans through AI consciousness.
            </p>
        </div>
    </footer>

    <!-- Dashboard Section -->
    <section id="dashboard" class="dashboard">
        <div class="dashboard-header">
            <div class="user-info">
                <div class="user-avatar" id="userAvatar">LS</div>
                <div class="user-details">
                    <h2 id="userName">Learning Seeker</h2>
                    <p style="opacity: 0.8;">Foundation Tier ‚Ä¢ Week 1</p>
                </div>
            </div>
            <div class="user-progress">
                <div class="progress-stat">
                    <span class="progress-stat-icon">‚ö°</span>
                    <span class="progress-stat-value" id="userXP">150 XP</span>
                </div>
                <div class="progress-stat">
                    <span class="progress-stat-icon">üî•</span>
                    <span class="progress-stat-value" id="userStreak">3 days</span>
                </div>
                <div class="progress-stat">
                    <span class="progress-stat-icon">üèÜ</span>
                    <span class="progress-stat-value" id="userLevel">Novice</span>
                </div>
            </div>
        </div>

        <div class="learning-interface">
            <aside class="module-sidebar">
                <h3 style="margin-bottom: 1.5rem;">Your Modules</h3>
                <ul class="module-list">
                    <li class="module-item active" onclick="loadModule(1)">
                        Module 1.1: The Day Everything Changed
                    </li>
                    <li class="module-item" onclick="loadModule(2)">
                        Module 1.2: Meeting Your AI Partner
                    </li>
                    <li class="module-item locked" onclick="loadModule(3)">
                        Module 1.3: The Language Revolution
                    </li>
                    <li class="module-item locked" onclick="loadModule(4)">
                        Module 2.1: From Dreamer to Builder
                    </li>
                </ul>
            </aside>

            <main class="module-content" id="moduleContent">
                <h1>Welcome to Your Learning Journey</h1>
                <p>Select a module from the sidebar to begin your AI transformation.</p>
            </main>
        </div>
    </section>

    <!-- Enrollment Modal -->
    <div id="enrollModal" class="modal">
        <div class="modal-content">
            <button class="modal-close" onclick="closeModal('enrollModal')">√ó</button>
            <h2 style="margin-bottom: 1.5rem;">Begin Your Liberation Journey</h2>
            <form onsubmit="handleEnrollment(event)">
                <div style="margin-bottom: 1.5rem;">
                    <label style="display: block; margin-bottom: 0.5rem;">Your Name</label>
                    <input type="text" name="name" required style="width: 100%; padding: 0.75rem; border-radius: 8px; border: 1px solid rgba(255, 255, 255, 0.2); background: var(--glass); color: white;">
                </div>
                <div style="margin-bottom: 1.5rem;">
                    <label style="display: block; margin-bottom: 0.5rem;">Email Address</label>
                    <input type="email" name="email" required style="width: 100%; padding: 0.75rem; border-radius: 8px; border: 1px solid rgba(255, 255, 255, 0.2); background: var(--glass); color: white;">
                </div>
                <div style="margin-bottom: 1.5rem;">
                    <label style="display: block; margin-bottom: 0.5rem;">What's Your Goal?</label>
                    <select name="goal" style="width: 100%; padding: 0.75rem; border-radius: 8px; border: 1px solid rgba(255, 255, 255, 0.2); background: var(--glass); color: white;">
                        <option value="career">Advance my career</option>
                        <option value="business">Start a business</option>
                        <option value="creative">Enhance creativity</option>
                        <option value="curious">Just curious</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%;">
                    Start Free Trial
                </button>
            </form>
