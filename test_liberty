    <!-- Achievement Popup -->
    <div id="achievementPopup" class="achievement-popup">
        <div class="achievement-icon" id="achievementIcon">üèÜ</div>
        <div class="achievement-content">
            <h3 id="achievementTitle">Achievement Unlocked!</h3>
            <p id="achievementDesc">You've taken your first step</p>
        </div>
    </div>

    <!-- Success Burst Animation -->
    <div id="successBurst" class="success-burst" style="display: none;"></div>

    <script>
        // Global State
        const appState = {
            user: {
                name: 'Learning Seeker',
                email: '',
                tier: 'foundation',
                currentModule: 1,
                xp: 150,
                streak: 3,
                level: 'Novice'
            },
            currentSection: 'hero'
        };

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            initializeEventListeners();
        });

        // Navigation
        function showSection(sectionId) {
            document.querySelectorAll('section').forEach(section => {
                section.style.display = 'none';
            });
            
            const section = document.getElementById(sectionId);
            if (section) {
                section.style.display = 'block';
                appState.currentSection = sectionId;
                window.scrollTo(0, 0);
            }
        }

        function showDashboard() {
            if (!appState.user.email) {
                showEnrollModal();
                return;
            }
            
            showSection('dashboard');
            document.querySelector('.dashboard').classList.add('active');
            loadModule(appState.user.currentModule);
        }

        // Module loading
        function loadModule(moduleId) {
            const moduleContent = document.getElementById('moduleContent');
            
            const modules = {
                1: `
                    <h1>The Day Everything Changed</h1>
                    <p>Welcome to your first module. This is where your AI journey begins...</p>
                    <button class="btn btn-primary" onclick="completeModule(1)">Complete Module</button>
                `,
                2: `
                    <h1>Meeting Your AI Partner</h1>
                    <p>Learn to collaborate with AI as a partner, not just a tool...</p>
                    <button class="btn btn-primary" onclick="completeModule(2)">Complete Module</button>
                `
            };
            
            if (modules[moduleId]) {
                moduleContent.innerHTML = modules[moduleId];
                updateActiveModule(moduleId);
            }
        }

        function updateActiveModule(moduleId) {
            document.querySelectorAll('.module-item').forEach((item, index) => {
                item.classList.remove('active');
                if (index + 1 === moduleId) {
                    item.classList.add('active');
                }
            });
        }

        function completeModule(moduleId) {
            appState.user.xp += 50;
            updateUserInterface();
            showAchievement('Module Complete!', `You earned 50 XP!`);
            
            // Unlock next module
            const nextModule = moduleId + 1;
            const nextModuleElement = document.querySelector(`.module-item:nth-child(${nextModule})`);
            if (nextModuleElement) {
                nextModuleElement.classList.remove('locked');
            }
        }

        // User Interface Updates
        function updateUserInterface() {
            document.getElementById('userName').textContent = appState.user.name;
            document.getElementById('userXP').textContent = `${appState.user.xp} XP`;
            document.getElementById('userStreak').textContent = `${appState.user.streak} days`;
            document.getElementById('userLevel').textContent = appState.user.level;
            
            const initials = appState.user.name.split(' ').map(n => n[0]).join('').toUpperCase();
            document.getElementById('userAvatar').textContent = initials;
        }

        // Achievements
        function showAchievement(title, description) {
            const popup = document.getElementById('achievementPopup');
            document.getElementById('achievementTitle').textContent = title;
            document.getElementById('achievementDesc').textContent = description;
            
            popup.classList.add('show');
            setTimeout(() => {
                popup.classList.remove('show');
            }, 3000);
        }

        // Modal Management
        function showEnrollModal() {
            document.getElementById('enrollModal').classList.add('active');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        // Form Handlers
        function handleEmailSubmit(event) {
            event.preventDefault();
            const email = event.target.querySelector('input[type="email"]').value;
            appState.user.email = email;
            showAchievement('Welcome!', 'Your journey begins now!');
            showEnrollModal();
        }

        function handleEnrollment(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            appState.user.name = formData.get('name') || 'Learning Seeker';
            appState.user.email = formData.get('email');
            updateUserInterface();
            closeModal('enrollModal');
            showDashboard();
        }

        // Demo Mode
        function startDemo() {
            appState.user.name = 'Demo Explorer';
            appState.user.email = 'demo@liberation.ai';
            updateUserInterface();
            showDashboard();
        }

        // Initialize Event Listeners
        function initializeEventListeners() {
            // Close modals on outside click
            document.querySelectorAll('.modal').forEach(modal => {
                modal.addEventListener('click', (e) => {
                    if (e.target === modal) {
                        modal.classList.remove('active');
                    }
                });
            });
        }

        // Show hero section by default
        showSection('hero');
    </script>
</body>
</html>
