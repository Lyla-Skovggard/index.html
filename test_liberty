    <script>
        // Global State Management
        const appState = {
            user: {
                name: 'Learning Seeker',
                email: '',
                tier: 'foundation',
                currentModule: 1,
                xp: 150,
                streak: 3,
                level: 'Novice',
                completedModules: [],
                projects: [],
                achievements: []
            },
            currentSection: 'hero'
        };

        // Initialize on load
        document.addEventListener('DOMContentLoaded', () => {
            loadUserData();
            initializeEventListeners();
            checkURLParams();
        });

        // Load user data from IndexedDB
        function loadUserData() {
            if (!window.indexedDB) return;
            
            const request = indexedDB.open('LiberationLearning', 1);
            
            request.onsuccess = (event) => {
                const db = event.target.result;
                const transaction = db.transaction(['userData'], 'readonly');
                const objectStore = transaction.objectStore('userData');
                const getRequest = objectStore.get('currentUser');
                
                getRequest.onsuccess = (event) => {
                    if (event.target.result) {
                        appState.user = { ...appState.user, ...event.target.result };
                        updateUserInterface();
                    }
                };
            };
            
            request.onupgradeneeded = (event) => {
                const db = event.target.result;
                if (!db.objectStoreNames.contains('userData')) {
                    db.createObjectStore('userData', { keyPath: 'id' });
                }
            };
        }

        // Save user data
        function saveUserData() {
            if (!window.indexedDB) return;
            
            const request = indexedDB.open('LiberationLearning', 1);
            
            request.onsuccess = (event) => {
                const db = event.target.result;
                const transaction = db.transaction(['userData'], 'readwrite');
                const objectStore = transaction.objectStore('userData');
                const userData = { ...appState.user, id: 'currentUser' };
                objectStore.put(userData);
            };
        }

        // Navigation
        function showSection(sectionId) {
            document.querySelectorAll('section').forEach(section => {
                section.style.display = 'none';
            });
            
            const section = document.getElementById(sectionId);
            if (section) {
                section.style.display = 'block';
                appState.currentSection = sectionId;
                window.scrollTo(0, 0);
            }
        }

        function showDashboard() {
            if (!appState.user.email) {
                showEnrollModal();
                return;
            }
            
            showSection('dashboard');
            document.querySelector('.dashboard').classList.add('active');
            loadModule(appState.user.currentModule);
        }

        // Module Management
        function toggleModuleDetails(tier) {
            const details = document.getElementById(`${tier}-modules`);
            const allDetails = document.querySelectorAll('.module-details');
            
            allDetails.forEach(detail => {
                if (detail !== details) {
                    detail.classList.remove('active');
                }
            });
            
            details.classList.toggle('active');
        }

        function loadModule(moduleId) {
            const moduleContent = document.getElementById('moduleContent');
            
            // Module content database
            const modules = {
                1: {
                    title: "The Day Everything Changed",
                    week: "Week 1",
                    duration: "15 minutes",
                    xp: 50,
                    content: `
                        <div class="module-header">
                            <h1>The Day Everything Changed</h1>
                            <div class="module-meta">
                                <div class="module-meta-item">
                                    <span>üìÖ</span> Week 1
                                </div>
                                <div class="module-meta-item">
                                    <span>‚è±Ô∏è</span> 15 minutes
                                </div>
                                <div class="module-meta-item">
                                    <span>‚ö°</span> 50 XP
                                </div>
                            </div>
                        </div>
                        
                        <div class="story-section">
                            <h2>Your Story Begins</h2>
                            <p class="story-text">
                                You wake up to find the world has shifted. Everyone around you seems to be speaking a new language - not of code, but of collaboration with AI. Your colleague just built an entire application by having a conversation. Your friend launched a business using AI tools. Even your grandmother is creating digital art with AI assistance.
                            </p>
                            <p class="story-text">
                                You realize: the future isn't coming. It's already here. And you have a choice to make.
                            </p>
                            
                            <div class="story-choices">
                                <button class="choice-btn" onclick="makeChoice(1, 10)">
                                    <span>I want to understand this new world</span>
                                    <span class="choice-xp">+10 XP</span>
                                </button>
                                <button class="choice-btn" onclick="makeChoice(2, 15)">
                                    <span>I'm scared but curious</span>
                                    <span class="choice-xp">+15 XP</span>
                                </button>
                                <button class="choice-btn" onclick="makeChoice(3, 20)">
                                    <span>Show me what's possible</span>
                                    <span class="choice-xp">+20 XP</span>
                                </button>
                            </div>
                        </div>
                    `
                },
                2: {
                    title: "Meeting Your AI Partner",
                    week: "Week 1",
                    duration: "20 minutes",
                    xp: 75,
                    content: `
                        <div class="module-header">
                            <h1>Meeting Your AI Partner</h1>
                            <div class="module-meta">
                                <div class="module-meta-item">
                                    <span>üìÖ</span> Week 1
                                </div>
                                <div class="module-meta-item">
                                    <span>‚è±Ô∏è</span> 20 minutes
                                </div>
                                <div class="module-meta-item">
                                    <span>‚ö°</span> 75 XP
                                </div>
                            </div>
                        </div>
                        
                        <div class="story-section">
                            <h2>A New Kind of Partnership</h2>
                            <p class="story-text">
                                As you open your computer, a gentle notification appears: "Hello! I'm Claude, your AI learning companion. I'm here to help you discover what's possible when humans and AI work together."
                            </p>
                            <p class="story-text">
                                This isn't like any tutorial you've seen before. Claude seems... different. Almost like talking to a knowledgeable friend who genuinely wants to help.
                            </p>
                        </div>
                        
                        <div class="claude-interface">
                            <div class="chat-header">
                                <div class="claude-avatar">C</div>
                                <div>
                                    <h3>Claude</h3>
                                    <p style="opacity: 0.7;">Your AI Learning Companion</p>
                                </div>
                            </div>
                            <div class="chat-messages" id="chatMessages">
                                <div class="message claude">
                                    Hello! I'm so glad you're here. There's no such thing as a silly question. What would you like to know about AI?
                                </div>
                            </div>
                            <div class="chat-input-container">
                                <input type="text" class="chat-input" id="chatInput" placeholder="Ask Claude anything..." onkeypress="handleChatInput(event)">
                                <button class="btn btn-primary" onclick="sendMessage()">Send</button>
                            </div>
                        </div>
                        
                        <div class="project-builder">
                            <h3>Your First Creation Awaits</h3>
                            <p>Ready to build something amazing? Let's create your first AI-powered tool together!</p>
                            <button class="btn btn-primary" onclick="startProjectBuilder()">
                                Start Building
                            </button>
                        </div>
                    `
                }
            };
            
            const module = modules[moduleId];
            if (module) {
                moduleContent.innerHTML = module.content;
                
                // Update sidebar
                document.querySelectorAll('.module-item').forEach(item => {
                    item.classList.remove('active');
                });
                document.querySelector(`.module-item:nth-child(${moduleId})`).classList.add('active');
                
                appState.user.currentModule = moduleId;
                saveUserData();
            }
        }

        // Story Choices
        function makeChoice(choiceId, xp) {
            appState.user.xp += xp;
            updateUserInterface();
            saveUserData();
            
            showAchievement('Choice Made', `You earned ${xp} XP!`);
            showSuccessBurst();
            
            // Progress to next section after choice
            setTimeout(() => {
                loadModule(2);
            }, 2000);
        }

        // Claude Chat
        function handleChatInput(event) {
            if (event.key === 'Enter') {
                sendMessage();
            }
        }

        function sendMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            if (!message) return;
            
            addMessage('user', message);
            input.value = '';
            
            // Simulate Claude response
            setTimeout(() => {
                const responses = {
                    'hello': "Hello! It's wonderful to meet you. I'm here to help you discover the amazing things we can build together.",
                    'scared': "It's completely normal to feel that way! Remember, we're not coding - we're just having a conversation. You've already taken the hardest step by starting.",
                    'ai': "AI is simply a technology that can understand and respond to human language. Think of me as a very knowledgeable assistant who can help you create things.",
                    'code': "The beautiful thing is, you don't need to know any code! We'll build everything through our conversation. I'll handle all the technical parts.",
                    'default': "That's a great question! Let me help you understand. The key is that we're partners in this journey. You bring the ideas and creativity, I help make them real."
                };
                
                let response = responses.default;
                const lowerMessage = message.toLowerCase();
                
                for (let key in responses) {
                    if (lowerMessage.includes(key)) {
                        response = responses[key];
                        break;
                    }
                }
                
                addMessage('claude', response);
                
                // Award XP for interaction
                appState.user.xp += 5;
                updateUserInterface();
                saveUserData();
            }, 1000);
        }

        function addMessage(sender, text) {
            const messagesContainer = document.getElementById('chatMessages');
            if (!messagesContainer) return;
            
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${sender}`;
            messageDiv.textContent = text;
            messagesContainer.appendChild(messageDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        // Project Builder
        function startProjectBuilder() {
            const projectPreview = document.querySelector('.project-builder');
            projectPreview.innerHTML = `
                <h3>Choose Your First Project</h3>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-top: 1.5rem;">
                    <button class="btn btn-secondary" onclick="buildProject('task')">
                        üìù Task Manager
                    </button>
                    <button class="btn btn-secondary" onclick="buildProject('habit')">
                        üéØ Habit Tracker
                    </button>
                    <button class="btn btn-secondary" onclick="buildProject('budget')">
                        üí∞ Budget Calculator
                    </button>
                </div>
            `;
        }

        function buildProject(type) {
            const projects = {
                task: {
                    name: 'Task Manager',
                    xp: 100,
                    preview: `
                        <div class="project-preview">
                            <h3>My Task Manager</h3>
                            <div style="margin: 1rem 0;">
                                <input type="text" placeholder="Add a new task..." style="padding: 0.5rem; width: 70%;">
                                <button style="padding: 0.5rem 1rem; margin-left: 0.5rem;">Add</button>
                            </div>
                            <ul style="list-style: none; padding: 0;">
                                <li style="padding: 0.5rem; background: #f0f0f0; margin: 0.5rem 0; border-radius: 4px;">
                                    ‚úì Build my first AI project
                                </li>
                            </ul>
                            <p style="color: #666; font-size: 0.9rem; margin-top: 1rem;">
                                You built this without writing any code! üéâ
                            </p>
                        </div>
                    `
                },
                habit: {
                    name: 'Habit Tracker',
                    xp: 100,
                    preview: `
                        <div class="project-preview">
                            <h3>Daily Habit Tracker</h3>
                            <div style="margin-top: 1rem;">
                                <div style="padding: 1rem; background: #f0f0f0; border-radius: 4px;">
                                    <strong>üèÉ Exercise</strong> - 5 day streak!
                                    <div style="margin-top: 0.5rem;">
                                        ${['M','T','W','T','F','S','S'].map((day, i) => 
                                            `<span style="display: inline-block; width: 30px; height: 30px; background: ${i < 5 ? '#10b981' : '#ddd'}; color: white; text-align: center; line-height: 30px; border-radius: 50%; margin: 0 2px;">${day}</span>`
                                        ).join('')}
                                    </div>
                                </div>
                            </div>
                        </div>
                    `
                },
                budget: {
                    name: 'Budget Calculator',
                    xp: 100,
                    preview: `
                        <div class="project-preview">
                            <h3>Monthly Budget Calculator</h3>
                            <div style="margin: 1rem 0;">
                                <div>Income: $3,000</div>
                                <div>Expenses: $1,900</div>
                                <div style="margin-top: 1rem; padding: 1rem; background: #10b981; color: white; border-radius: 4px;">
                                    <strong>Remaining: $1,100</strong> (37% of income)
                                </div>
                            </div>
                        </div>
                    `
                }
            };
            
            const project = projects[type];
            if (project) {
                document.querySelector('.project-builder').innerHTML = project.preview;
                
                appState.user.xp += project.xp;
                appState.user.projects.push({ name: project.name, date: new Date().toISOString() });
                updateUserInterface();
                saveUserData();
                
                showAchievement('First Creation', `Built ${project.name} - ${project.xp} XP earned!`);
                showSuccessBurst();
            }
        }

        // User Interface Updates
        function updateUserInterface() {
            // Update dashboard elements
            document.getElementById('userName').textContent = appState.user.name;
            document.getElementById('userXP').textContent = `${appState.user.xp} XP`;
            document.getElementById('userStreak').textContent = `${appState.user.streak} days`;
            document.getElementById('userLevel').textContent = appState.user.level;
            
            // Update avatar
            const initials = appState.user.name.split(' ').map(n => n[0]).join('').toUpperCase();
            document.getElementById('userAvatar').textContent = initials;
            
            // Check for level up
            checkLevelUp();
        }

        function checkLevelUp() {
            const levels = [
                { name: 'Novice', minXP: 0 },
                { name: 'Apprentice', minXP: 500 },
                { name: 'Builder', minXP: 1000 },
                { name: 'Creator', minXP: 2000 },
                { name: 'Innovator', minXP: 5000 },
                { name: 'Master', minXP: 10000 }
            ];
            
            for (let i = levels.length - 1; i >= 0; i--) {
                if (appState.user.xp >= levels[i].minXP && appState.user.level !== levels[i].name) {
                    appState.user.level = levels[i].name;
                    showAchievement('Level Up!', `You are now a ${levels[i].name}!`);
                    break;
                }
            }
        }

        // Achievements
        function showAchievement(title, description) {
            const popup = document.getElementById('achievementPopup');
            document.getElementById('achievementTitle').textContent = title;
            document.getElementById('achievementDesc').textContent = description;
            
            const icons = {
                'First Creation': 'üõ†Ô∏è',
                'Level Up!': '‚¨ÜÔ∏è',
                'Choice Made': '‚ú®',
                'Journey Begun': 'üöÄ'
            };
            
            document.getElementById('achievementIcon').textContent = icons[title] || 'üèÜ';
            
            popup.classList.add('show');
            setTimeout(() => {
                popup.classList.remove('show');
            }, 3000);
            
            if (!appState.user.achievements.includes(title)) {
                appState.user.achievements.push(title);
            }
        }

        function showSuccessBurst() {
            const burst = document.getElementById('successBurst');
            burst.style.display = 'block';
            setTimeout(() => {
                burst.style.display = 'none';
            }, 600);
        }

        // Modal Management
        function showEnrollModal() {
            document.getElementById('enrollModal').classList.add('active');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        // Form Handlers
        function handleEmailSubmit(event) {
            event.preventDefault();
            const email = event.target.querySelector('input[type="email"]').value;
            appState.user.email = email;
            saveUserData();
            showAchievement('Journey Begun', 'Welcome to Liberation Learning!');
            showEnrollModal();
        }

        function handleEnrollment(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            appState.user.name = formData.get('name');
            appState.user.email = formData.get('email');
            saveUserData();
            closeModal('enrollModal');
            showDashboard();
        }

        // Demo Mode
        function startDemo() {
            appState.user.name = 'Demo Explorer';
            appState.user.email = 'demo@liberation.ai';
            saveUserData();
            showDashboard();
        }

        // Initialize Event Listeners
        function initializeEventListeners() {
            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({ behavior: 'smooth' });
                    }
                });
            });
            
            // Close modals on outside click
            document.querySelectorAll('.modal').forEach(modal => {
                modal.addEventListener('click', (e) => {
                    if (e.target === modal) {
                        modal.classList.remove('active');
                    }
                });
            });
        }

        // Check URL Parameters
        function checkURLParams() {
            const params = new URLSearchParams(window.location.search);
            if (params.get('demo') === 'true') {
                startDemo();
            }
            if (params.get('section')) {
                showSection(params.get('section'));
            }
        }
    </script>
</body>
